#!/usr/bin/make -f
# See debhelper(7) (uncomment to enable)
# output every command that modifies files on the build system.
#export DH_VERBOSE = 1

%:
	dh $@ 

override_dh_auto_build:
	HOME=$$(mktemp -d) ./rebar3 as prod release
	cp priv/ldapsp.service debian/

override_dh_install:
	dh_install
	chmod a+x debian/ldapsp/opt/ldapsp/erts-*/bin/*
	rm -r debian/ldapsp/opt/ldapsp/lib/ldapsp-*/priv/

override_dh_installinit:
	dh_systemd_enable
	dh_systemd_start --restart-after-upgrade ldapsp.service

override_dh_auto_clean:
	dh_auto_clean
	rm -f debian/ldapsp.service
